<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activity.showimages.CategoryShowImageActivity">

    <androidx.viewpager.widget.ViewPager
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/ViewPager"
        android:layout_gravity="center"
        />

    <ImageView
        android:layout_marginLeft="4dp"
        android:id="@+id/ImgExit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_chevron_left_24" />

    <ImageView
        android:id="@+id/ImgComment"
        android:layout_marginRight="16dp"
        android:layout_gravity="right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_message_24" />

    <ImageView
        android:id="@+id/ImgShare"
        android:layout_marginRight="56dp"
        android:layout_gravity="right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_share_24" />

    <ImageView
        android:id="@+id/ImgSetWallpaper"
        android:layout_marginRight="96dp"
        android:layout_gravity="right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_wallpaper_24" />



    <com.getbase.floatingactionbutton.FloatingActionsMenu
        android:layout_margin="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        app:fab_addButtonColorNormal="@color/blackopacity"
        app:fab_addButtonColorPressed="@color/blackopacity"
        app:fab_addButtonPlusIconColor="@color/white"
        app:fab_labelStyle="@style/customFab"
        >

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_action1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fab_colorNormal="@color/blackopacity"
            app:fab_colorPressed="@color/white"
            app:fab_icon="@drawable/ic_baseline_get_app_32"
            app:fab_size="mini"
            app:fab_title="600 * 800"
            />

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_action2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fab_colorNormal="@color/blackopacity"
            app:fab_colorPressed="@color/white"
            app:fab_icon="@drawable/ic_baseline_get_app_32"
            app:fab_size="mini"
            app:fab_title="720 * 1280"
            />

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_action3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fab_colorNormal="@color/blackopacity"
            app:fab_colorPressed="@color/white"
            app:fab_icon="@drawable/ic_baseline_get_app_32"
            app:fab_size="mini"
            app:fab_title="1080 * 1920"
            />

    </com.getbase.floatingactionbutton.FloatingActionsMenu>

</FrameLayout>